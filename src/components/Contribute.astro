---
import type { Lang } from '../i18n'
import { useTranslations } from '../i18n'

interface Props {
  lang?: Lang
}

const { lang = 'en' } = Astro.props
const t = useTranslations(lang)
---

<section id="contribuir" class="border-b border-border/40">
  <div class="container mx-auto max-w-6xl px-4 py-20 sm:px-6">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="mb-3 text-2xl font-bold tracking-tight sm:text-3xl">{t('contribute.heading')}</h2>
      <p class="mb-8 text-muted-foreground">
        {t('contribute.description')} <code class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono">.md</code> {t('contribute.description2')}
      </p>

      <div class="mb-10 rounded-xl border border-border/50 bg-card/50 p-6 text-left backdrop-blur-sm">
        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-muted-foreground">{t('contribute.format')}</h3>
        <pre class="overflow-x-auto rounded-lg bg-muted/80 p-4 text-sm leading-relaxed text-foreground"><code class="font-mono">---
title: "{t('contribute.example.title')}"
description: "{t('contribute.example.description')}"
author: "{t('contribute.example.author')}"
authorUrl: "https://github.com/tu-usuario"
repoUrl: "https://github.com/tu-usuario/tu-repo"
websiteUrl: "https://tu-proyecto.cl"
tags: ["typescript", "react", "open-source"]
category: "Web"
featured: false
publishDate: 2024-01-01
---

{t('contribute.example.about')}

{t('contribute.example.body1')}
{t('contribute.example.body2')}
{t('contribute.example.body3')}</code></pre>
      </div>

      <div class="grid gap-6 sm:grid-cols-3">
        <div class="flex flex-col items-center gap-3 rounded-xl border border-border/50 bg-card/50 p-6 backdrop-blur-sm">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/>
            </svg>
          </div>
          <h4 class="font-semibold">{t('contribute.step1.title')}</h4>
          <p class="text-center text-sm text-muted-foreground">
            {t('contribute.step1.desc')} <code class="font-mono text-xs">.md</code> {t('contribute.step1.desc2')} <code class="font-mono text-xs">src/content/projects/</code>
          </p>
        </div>

        <div class="flex flex-col items-center gap-3 rounded-xl border border-border/50 bg-card/50 p-6 backdrop-blur-sm">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
          </div>
          <h4 class="font-semibold">{t('contribute.step2.title')}</h4>
          <p class="text-center text-sm text-muted-foreground">
            {t('contribute.step2.desc')}
          </p>
        </div>

        <div class="flex flex-col items-center gap-3 rounded-xl border border-border/50 bg-card/50 p-6 backdrop-blur-sm">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/>
            </svg>
          </div>
          <h4 class="font-semibold">{t('contribute.step3.title')}</h4>
          <p class="text-center text-sm text-muted-foreground">
            {t('contribute.step3.desc')}
          </p>
        </div>
      </div>

      <div class="mt-10">
        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex h-11 items-center justify-center rounded-lg bg-primary px-8 text-sm font-semibold text-primary-foreground shadow-sm transition-all hover:bg-primary/90 hover:shadow-md"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="mr-2">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          {t('contribute.cta')}
        </a>
      </div>
    </div>
  </div>
</section>
