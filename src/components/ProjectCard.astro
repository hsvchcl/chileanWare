---
interface Props {
  title: string
  description: string
  slug: string
  author: string
  tags: string[]
  category: string
  featured?: boolean
  websiteUrl?: string
  repoUrl?: string
}

const { title, description, slug, author, tags, category, featured, websiteUrl, repoUrl } = Astro.props

const categoryIcons: Record<string, string> = {
